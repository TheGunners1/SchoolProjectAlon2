<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Poster"
    android:orientation="vertical"
    android:background="#DCDCDD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:textSize="100dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvInvitationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" would like to invite you to a game of - "
            android:textSize="30dp"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvInvitationGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="()"
            android:textSize="30dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/tvInvitationCourt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="They will be playing in (), in () court."
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tvInvitationPlayersNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are currently () players."
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Starting Time- "
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tvInvitationTime"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="()"
            android:textSize="50dp"/>


        <ImageButton
            android:id="@+id/btnCall"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@android:drawable/stat_sys_phone_call"
            android:background="#099910"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="35dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Back"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#F7070F"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>
